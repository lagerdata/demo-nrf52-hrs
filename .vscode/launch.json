    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb-multiarch) Launch",
            "type": "cppdbg",
            "request": "launch",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerArgs": "--cd=${workspaceFolder} --nx",
            "MIMode": "gdb", 
            "targetArchitecture": "arm",
            "program": "${workspaceFolder}/examples/ble_peripheral/ble_app_hrs/pca10056/s140/armgcc/_build/nrf52840_xxaa.out", 
             "setupCommands": [
                {"text": "set remotetimeout 5"},
                {"text": "target remote localhost:3333"},
                {"text": "monitor reset halt"},
                {"text": "file './examples/ble_peripheral/ble_app_hrs/pca10056/s140/armgcc/_build/nrf52840_xxaa.out'"},
                {"text": "load"},
                {"text": "monitor reset halt"},
                {"text": "break main","ignoreFailures": true}
            ],
            "launchCompleteCommand": "None",
            "externalConsole": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}